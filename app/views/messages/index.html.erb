<div class="panel panel-success">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body" style="overflow: scroll; width: 100%; height: 400px;">
    <% @messages.each do |message| %>
      <span class="label label-success"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>

  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label class="col-sm-1 control-label">名前:</label>
    <div class="col-sm-3">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-1 control-label">内容:</label>
    <div class="col-sm-5">
      <%= f.text_area :body, size: "40x1", class: "form-control" %>
    </div>
  </div>
    
  <div class="form-group">
    <div class="col-sm-offset-5 col-sm-7 form-actions">  
      <%= f.submit class: "btn btn-sm btn-success" %>
    </div>
  </div>
  
<% end %>