<div class="panel panel-success">
  
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body" style="overflow: scroll; width: 100%; height: 400px;">
    <% @messages.each do |message| %>
      <span class="label label-success"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
  
</div>

