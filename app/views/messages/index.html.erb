<div class="panel panel-success">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body" style="overflow: scroll; width: 100%; height: 400px;">
    <% @messages.each do |message| %>
      <span class="label label-success"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>

  <div class="form-group">
    <label class="col-sm-1 control-label">名前:</label>
    <div class="col-sm-11">
    <%= f.text_field :name %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-1 control-label">内容:</label>
    <div class="col-sm-11">
    <%= f.text_area :body, size: "50x5" %>
    </div>
  </div>
    
  <div class="form-group">
    <div class="col-sm-offset-5 col-sm-7">  
    <%= f.submit class: "btn btn-sm btn-success" %>
    </div>
  </div>
  
<% end %>